---
layout: layouts/base.liquid
---

<article class="testimonial">
  <h1>{{ title }}</h1>
  
  {% include "testimonials/testimonial-meta.liquid" %}
  
  <div class="testimonial-content">
    {{ content }}
  </div>

  {% if videos %}
    <div class="video-grid">
      {% for video in videos %}
        {% include "testimonials/testimonial-video.liquid" %}
      {% endfor %}
    </div>
  {% endif %}

  {% if images %}
    {% include "testimonials/testimonial-gallery.liquid" %}
  {% endif %}
</article>
