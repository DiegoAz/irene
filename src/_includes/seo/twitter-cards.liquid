<!-- Twitter Card -->
<meta name="twitter:card" content="{{ meta.twitterCard | default: site.meta.twitterCard }}">
<meta name="twitter:url" content="{{ site.url }}{{ page.url }}">
<meta name="twitter:title" content="{% if page.url == "/" %}{{ site.name }}{% else %}{{ title | default: pageTitle }} | {{ site.name }}{% endif %}">
<meta name="twitter:description" content="{{ meta.description | default: site.description }}">
<meta name="twitter:image" content="{{ site.url }}{{ meta.image | default: '/img/og-image.jpg' }}">