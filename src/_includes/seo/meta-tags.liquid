<!-- Primary Meta Tags -->
<meta name="title" content="{% if page.url == "/" %}{{ site.name }}{% else %}{{ pageTitle }} | {{ site.name }}{% endif %}">
<meta name="description" content="{{ meta.description | default: site.description }}">
<meta name="keywords" content="{% if meta.keywords %}{{ meta.keywords }}, {{ site.keywords }}{% else %}{{ site.keywords }}{% endif %}">
<meta name="author" content="{{ site.author }}">
<meta http-equiv="content-language" content="{{ page.lang | default: site.lang }}">