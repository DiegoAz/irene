<!-- Open Graph / Facebook -->
{%if meta.article %}
    <meta property="og:type" content="article">
    <meta property="article:section" content="{{ meta.article.section }}">
    {% if meta.article.published_time %}
        <meta property="article:published_time" content="{{ meta.article.published_time }}">
    {% endif %}
    {% if meta.article.author %}
        <meta property="article:author" content="{{ meta.article.author }}">
    {% endif %}
{% else %}
    <meta property="og:type" content="website">
{% endif %}
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:title" content="{% if page.url == "/" %}{{ site.name }}{% else %}{{ title | default: pageTitle }} | {{ site.name }}{% endif %}">
<meta property="og:description" content="{{ meta.description | default: site.description }}">
<meta property="og:image" content="{{ site.url }}{{ meta.image | default: '/img/og-image.jpg' }}">